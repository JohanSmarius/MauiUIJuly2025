<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiAIJuly.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiAIJuly"
    xmlns:views="clr-namespace:MauiAIJuly.Views"
    Title="MauiAIJuly">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Add Event"
        Icon="plus.png"
        ContentTemplate="{DataTemplate views:AddEventPage}"
        Route="add-event" />
    
    <ShellContent
        Title="Add Event Syncfusion"
        Icon="plus.png"
        ContentTemplate="{DataTemplate views:AddEventPageSyncfusion}"
        Route="add-event-syncfusion" />
    
    <ShellContent 
        Title="Volunteer Shifts"
        Icon="person.png"
        ContentTemplate="{DataTemplate local:ShiftOverview}"
        Route="ShiftOverview" />
</Shell>
